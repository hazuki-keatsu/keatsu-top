---
import type { Page } from "astro";
import type { CollectionEntry } from "astro:content";
import IconArrowLeft from "@/assets/icons/IconArrowLeft.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import LinkButton from "./LinkButton.astro";

export interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { page } = Astro.props;
---

{
  page.lastPage > 1 && (
    <nav class="mt-auto mb-8 flex justify-center" aria-label="Pagination">
      <div class="content-card px-6 py-4 mx-4 flex items-center space-x-4">
        <LinkButton
          disabled={!page.url.prev}
          href={page.url.prev as string}
          class:list={["select-none hover:text-accent transition-colors", { "opacity-50": !page.url.prev }]}
          ariaLabel="Previous"
        >
          <IconArrowLeft class="inline-block rtl:rotate-180" />
          上一个
        </LinkButton>
        <span class="text-accent font-medium">
          {page.currentPage} / {page.lastPage}
        </span>
        <LinkButton
          disabled={!page.url.next}
          href={page.url.next as string}
          class:list={["select-none hover:text-accent transition-colors", { "opacity-50": !page.url.next }]}
          ariaLabel="Next"
        >
          下一个
          <IconArrowRight class="inline-block rtl:rotate-180" />
        </LinkButton>
      </div>
    </nav>
  )
}
